= form_for @cvsection do |f|
  - if @cvsection.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cvsection.errors.count, "error")} prohibited this cvsection from being saved:"
      %ul
        - @cvsection.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :location
    = f.number_field :location
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
