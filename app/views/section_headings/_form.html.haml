= form_for @section_heading do |f|
  - if @section_heading.errors.any?
    #error_explanation
      %h2= "#{pluralize(@section_heading.errors.count, "error")} prohibited this section_heading from being saved:"
      %ul
        - @section_heading.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :position
    = f.number_field :position
  .field
    = f.label :desc
    = f.text_area :desc
  .actions
    = f.submit 'Save'
